package dia3;

public class Ejer1 {

	/**
	 * Ejercicio Nº 1 - Clases y Objetos Crear una clase llamada Cliente con los
	 * siguientes atributos: número de cliente, nombre y deuda.
	 * 
	 * Luego, realiza las siguientes acciones:
	 * 
	 * a) En el método main: Crea 3 objetos de la clase Cliente utilizando
	 * parámetros. b) En el método main: Crea 1 objeto de la clase Cliente sin
	 * parámetros y setearlos por sepadarados. c) En el método main: Muestra por
	 * pantalla la numeroCliente, nombre y deuda de los 3 clientes creados con
	 * parámetros.
	 * 
	 * @param args
	 */
	public static void main(String[] args) {
		// a) En el método main: Crea 3 objetos de la clase Cliente utilizando
		// parámetros.
		Cliente clienteA1 = new Cliente(1, "Cliente A1", 0);
		Cliente clienteA2 = new Cliente(2, "Cliente A2", 0);
		Cliente clienteA3 = new Cliente(3, "Cliente A3", 0);

		// b) En el método main: Crea 1 objeto de la clase Cliente sin parámetros y
		// setearlos por sepadarados.
		Cliente clienteB = new Cliente();
		clienteB.setNumCliente(4);
		clienteB.setNombre("Cliente B");
		clienteB.setDeuda(0);

		// c) En el método main: Muestra por pantalla la numeroCliente, nombre y deuda
		// de los 3 clientes creados con parámetros.
	}

}

class Cliente {
	private int numCliente;
	private String nombre;
	private double deuda;
	
	public Cliente() {
		super();
	}

	public Cliente(int numCliente, String nombre, double deuda) {
		super();
		this.numCliente = numCliente;
		this.nombre = nombre;
		this.deuda = deuda;
	}

	public int getNumCliente() {
		return numCliente;
	}

	public void setNumCliente(int numCliente) {
		this.numCliente = numCliente;
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public double getDeuda() {
		return deuda;
	}

	public void setDeuda(double deuda) {
		this.deuda = deuda;
	}

	@Override
	public String toString() {
		return "Cliente [numCliente=" + numCliente + ", nombre=" + nombre + ", deuda=" + deuda + "]";
	}

}
