package dia1;

import java.text.DecimalFormat;

public class ejer1 {

	/**
	 * Calcular el IMC (masa/altura^2) (sin entradas)
	 * 
	 * @param args
	 */
	public static void main(String[] args) {
		DecimalFormat format = new DecimalFormat("#.00"); 
		double masa = 80, altura = 1.80, imc = masa / Math.pow(altura, 2);
		System.out.println("Masa: " + format.format(masa));
		System.out.println("Altura: " + format.format(altura));
		System.out.println("IMC: " + format.format(imc));
	}

}
