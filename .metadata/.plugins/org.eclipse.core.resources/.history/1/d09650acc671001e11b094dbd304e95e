package dia1;

import java.text.DecimalFormat;
import java.util.Scanner;

public class Ejer3 {

	/**
	 * Ejercicio Nº 3 - Operaciones de Lectura, Variables y Operadores Escribir un
	 * programa que pida al usuario que ingrese por teclado: 5 números. Luego
	 * mostrar por pantalla/consola lo siguiente: La suma total de los números
	 * ingresados y el promedio de estos.
	 * 
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		DecimalFormat format = new DecimalFormat("#.00");

		int[] num = { 0, 0, 0, 0, 0 };

		int suma = 0;
		double promedio = 0;

		System.out.println("Introduce 5 números");
		for (int i = 0; i <= 4; i++) {
			num[i] = scanner.nextInt();
			suma += num[1];
		}
		promedio = suma / 5;

		System.out.println("La suma es " + suma + " y el promedio " + format.format(promedio));
	}
}
