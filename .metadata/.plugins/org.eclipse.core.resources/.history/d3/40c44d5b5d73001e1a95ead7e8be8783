package dia3;

public class Ejer3 {

	/**
	 * Ejercicio Nº 3 - POO Crea una clase llamada "Estudiante" que represente a un
	 * estudiante de una escuela. La clase debe tener los siguientes atributos: - id
	 * - nombre - edad - nivel - por ejemplo, "Primaria" o "Secundaria" - nota
	 * 
	 * La clase "Estudiante" debe tener dos constructores y sus métodos "getters" y
	 * "setters" para cada atributo.
	 * 
	 * Luego, en el método principal (main), crear un vector de estudiantes y
	 * almacenar 5 objetos estudiantes. Por último, recorrer el vector, mostrar el
	 * nombre y la nota de cada estudiante y además calcular el promedio de notas de
	 * los estudiantes (por nivel) y mostrarlos.
	 * 
	 * @param args
	 */
	public static void main(String[] args) {
        // Crear un vector de estudiantes
        Estudiante[] estudiantes = new Estudiante[5];

        // Llenar el vector con objetos Estudiante
        estudiantes[0] = new Estudiante(1, "Juan", 12, "Primaria", 95.5);
        estudiantes[1] = new Estudiante(2, "María", 14, "Secundaria", 87.0);
        estudiantes[2] = new Estudiante(3, "Pedro", 11, "Primaria", 92.5);
        estudiantes[3] = new Estudiante(4, "Ana", 16, "Secundaria", 78.3);
        estudiantes[4] = new Estudiante(5, "Luis", 13, "Primaria", 88.8);

        // Calcular el promedio de notas por nivel
        double promedioPrimaria = 0;
        double promedioSecundaria = 0;
        int cantidadPrimaria = 0;
        int cantidadSecundaria = 0;

        for (Estudiante estudiante : estudiantes) {
            if (estudiante.getNivel().equals("Primaria")) {
                promedioPrimaria += estudiante.getNota();
                cantidadPrimaria++;
            } else if (estudiante.getNivel().equals("Secundaria")) {
                promedioSecundaria += estudiante.getNota();
                cantidadSecundaria++;
            }

            // Mostrar el nombre y la nota de cada estudiante
            System.out.println("Nombre: " + estudiante.getNombre() + ", Nota: " + estudiante.getNota());
        }

        if (cantidadPrimaria > 0) {
            promedioPrimaria /= cantidadPrimaria;
            System.out.println("Promedio de notas en Primaria: " + promedioPrimaria);
        }

        if (cantidadSecundaria > 0) {
            promedioSecundaria /= cantidadSecundaria;
            System.out.println("Promedio de notas en Secundaria: " + promedioSecundaria);
        }
    }

}

public class Estudiante {
    private int id;
    private String nombre;
    private int edad;
    private String nivel;
    private double nota;

    public Estudiante(int id, String nombre, int edad, String nivel, double nota) {
        this.id = id;
        this.nombre = nombre;
        this.edad = edad;
        this.nivel = nivel;
        this.nota = nota;
    }

    // Getters y setters para los atributos
    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public int getEdad() {
        return edad;
    }

    public void setEdad(int edad) {
        this.edad = edad;
    }

    public String getNivel() {
        return nivel;
    }

    public void setNivel(String nivel) {
        this.nivel = nivel;
    }

    public double getNota() {
        return nota;
    }

    public void setNota(double nota) {
        this.nota = nota;
    }
}

